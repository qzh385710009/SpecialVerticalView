        app:stv_text="Test23423423的所发吗第三方放口袋了说服你了看不见的社王府井"
        app:stv_text_size="80"
        app:stv_text_color = "@color/colorPrimary"
        app:stv_text_direction ="1" />


    <com.qzhhh.sverticalviewlibrary.SpecialVerticalTextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#FFFF00"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintRight_toRightOf ="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:stv_text="Test23423423的所发吗第三方放口袋了说服你了看不见的社王府井"
        app:stv_text_size="80"
        app:stv_text_direction ="0" />


